<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ventas Semanalas por Afiliado</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <%- include('partials/headerChartWeekSale') %>
</head>

<body>
  <div id="graph_container">
    <canvas id="chartWeek"></canvas>
  </div>
</body>
<script>
  var labels = <%- JSON.stringify(labels) %>;;
  var values = [<%= values %>];
  var ctx = document.getElementById('chartWeek').getContext('2d');
  var chart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: labels,
      datasets: [{
        label: 'Ventas por d√≠a de la semana',
        data: values,
        backgroundColor: 'rgba(255, 102, 0, 1)',
        borderColor: 'rgba(255, 102, 0, 1)',
        borderWidth: 1
      }]
    },
    options: {
      plugins: {
        title: {
          display: true,
          text: "Ventas de la Semana",
          color: "#ff9900",
          position: "top",
          padding: {
            top: 0
          },
          font: {
            weight: 'bold',
            family: "Montserrat",
            size: 16,
          }
        },
        tooltip: {
          enabled: true,
          backgroundColor: "rgba(0, 0, 0, 1)",
          mode: "index"
        },
        legend: {
          display: true,
          labels: {
            boxWidth: 10,
            pointStyle: "circle",
            usePointStyle: true,
            color: "#ffffff",
            font: {
              weight: '500',
              family: "Montserrat",
              size: 12,
            }
          },

        }
      },
      responsive: true,
      maintainAspectRatio: false,
      scales: {
        x: {
          stacked: true,
          grid: {
            display: false
          },
          ticks: {
            color: "#ffffff"
          }
        },
        y: {
          beginAtZero: true,
          stacked: true,
          grid: {
            color: "rgba(256,256,256,0.3)"
          },
          ticks: {
            color: "#ffffff"
          }
        },
      },

    },
  });
</script>

</html>